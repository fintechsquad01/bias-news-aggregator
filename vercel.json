{
  "version": 2,
  "builds": [
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "rootDirectory": "frontend",
        "installCommand": "npm ci --include=dev",
        "buildCommand": "npm run build",
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    // 1) API calls go to Python
    { "src": "/api/(.*)",      "dest": "backend/app/main.py" },

    // 2) Serve your built assets directly
    { "src": "/assets/(.*)",   "dest": "frontend/dist/assets/$1" },

    // 3) Let Vercel check the filesystem; if file exists, serve it...
    { "handle": "filesystem" },

    // 4) ...otherwise fall back to index.html (SPA routing)
    { "src": "/(.*)",          "dest": "frontend/dist/index.html" }
  ]
}